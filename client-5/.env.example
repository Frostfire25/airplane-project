# ADS-B Aircraft Tracking Configuration

# Your location coordinates (required for distance calculations)
LATITUDE=42.8270
LONGITUDE=-71.3960

# Timezone for display (default: America/New_York)
TIMEZONE=America/New_York
TZ=America/New_York

# ADS-B Data Source Configuration
# Host where dump1090/readsb is running
ADSB_HOST=127.0.0.1

# Port for ADS-B data
# 30002 = raw format (AVR)
# 30005 = Beast binary format
ADSB_PORT=30005

# Data format: 'raw', 'beast', or 'avr'
ADSB_DATA_TYPE=beast

# Scheduler Configuration
# How often to poll/process ADS-B data (seconds)
ADSB_POLL_SCHEDULE_SECONDS=5

# How often to update the matrix display (seconds)
MATRIX_SCHEDULE_SECONDS=5

# How long to display each aircraft before cycling to next (seconds)
AIRCRAFT_DISPLAY_DURATION=30

# Animation delay between characters revealing (milliseconds)
MATRIX_ANIMATION_DELAY_MS=500

# Opacity of scrambling characters (0-100, where 100 is full brightness)
#  Scrambling characters display at 20% brightness
# Range: 0-100 (0 = invisible, 100 = full brightness)
MATRIX_SCRAMBLE_OPACITY=65

# Matrix Display Hardware Configuration
# Matrix dimensions (64x64 for most HUB75 panels)
MATRIX_WIDTH=64
MATRIX_HEIGHT=64
MATRIX_BIT_DEPTH=6
MATRIX_N_ADDR_LINES=5

# Simulate matrix mode (1 = simulate, 0 = real hardware)
SIMULATE_MATRIX=0

# Matrix Display Colors (R,G,B format)
# Time display color
MATRIX_COLOR_TIME=255,255,255

# Callsign/Flight number color
MATRIX_COLOR_CALLSIGN=255,255,255

# Distance color
MATRIX_COLOR_DISTANCE=255,255,255

# Altitude color
MATRIX_COLOR_ALTITUDE=255,255,255

# Speed color
MATRIX_COLOR_SPEED=255,255,255

# No aircraft message color
MATRIX_COLOR_NO_AIRCRAFT=255,255,255

# Border color (ring around the display)
MATRIX_COLOR_BORDER=100,100,100

# Brightness Configuration (0-255)
# Maximum brightness at noon
MATRIX_BRIGHTNESS_MAX=255

# Minimum brightness at midnight
MATRIX_BRIGHTNESS_MIN=100
